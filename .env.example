# =============================================================================
# MeetMeAt Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# Required fields are marked with (required)

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development                    # development | staging | production | test
PORT=3000

# =============================================================================
# DATABASE (PostgreSQL) - All required
# =============================================================================
DATABASE_HOST=localhost                 # (required)
DATABASE_PORT=5432
DATABASE_USER=meetmeat                  # (required)
DATABASE_PASSWORD=your_password_here    # (required)
DATABASE_NAME=meetmeat_dev              # (required)
DATABASE_SSL=false                      # true for production

# =============================================================================
# AI PROVIDER - Choose one: openai or anthropic
# =============================================================================
AI_PROVIDER=openai                      # openai | anthropic

# OpenAI Configuration (required when AI_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key   # (required if AI_PROVIDER=openai)
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (required when AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=                      # (required if AI_PROVIDER=anthropic)
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_API_VERSION=2023-06-01
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# =============================================================================
# STORAGE PROVIDER - Choose one: local, s3, or gcs
# =============================================================================
STORAGE_PROVIDER=local                  # local | s3 | gcs

# Local Storage (default for development)
LOCAL_STORAGE_PATH=./uploads

# AWS S3 Configuration (required when STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=                      # (required if STORAGE_PROVIDER=s3)
AWS_SECRET_ACCESS_KEY=                  # (required if STORAGE_PROVIDER=s3)
AWS_S3_BUCKET=                          # (required if STORAGE_PROVIDER=s3)
AWS_REGION=us-east-1

# Google Cloud Storage (required when STORAGE_PROVIDER=gcs)
GCS_PROJECT_ID=                         # (required if STORAGE_PROVIDER=gcs)
GCS_BUCKET=                             # (required if STORAGE_PROVIDER=gcs)

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGIN=*                           # Use specific origins in production
