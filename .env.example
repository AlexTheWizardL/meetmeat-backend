# MeetMeAt Backend - Environment Configuration
# Copy to .env.local and fill in required values

# Application
NODE_ENV=development    # development | production
                        # development: enables DB sync, detailed logs
                        # production: disables sync, requires migrations
PORT=3000

# Database (matches docker-compose.yml)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=meetmeat
DATABASE_PASSWORD=meetmeat_dev
DATABASE_NAME=meetmeat

# OpenAI (required for AI features)
OPENAI_API_KEY=sk-your-key-here

# Storage
STORAGE_PROVIDER=local  # local | s3
LOCAL_STORAGE_PATH=./uploads

# S3 (when STORAGE_PROVIDER=s3)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_REGION=us-east-1
